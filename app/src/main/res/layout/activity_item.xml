<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".Controller.ItemActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="359dp"
            android:id="@+id/itemImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintDimensionRatio="w,1:1"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" tools:srcCompat="@drawable/hat1"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.52"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/itemTitle" tools:text="Beanie" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/itemImage" android:textAlignment="center"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/itemPrice" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle" tools:text="$20" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:textAlignment="center"/>
    <Button
            android:text="Order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/orderButton" android:background="@drawable/custom_buy_button"
            android:textColor="@android:color/white" android:textStyle="bold" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>